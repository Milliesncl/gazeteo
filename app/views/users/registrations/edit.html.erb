<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="card w-full">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-line">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :photo,
                  as: :file,
                  required: true,
                  input_html: { autocomplete: "photo" }%>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <div class="form-line">
        <%= f.input :first_name,
                    label: "PrÃ©nom",
                    required: true,
                    input_html: { autocomplete: "first_name" }%>
        <%= f.input :last_name,
                    label: "Nom",
                    required: true,
                    input_html: { autocomplete: "last_name" }%>
      </div>
      <div class=form-line>
        <%= f.input :password,
                    # hint: "Laissez blanc si vous ne voulez pas changer",
                    required: false,
                    label: "Mot de passe",
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirmation du mot de passe",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="form-line">
        <%= f.input :current_password,
                    label: "Mot de passe actuel",
                    # hint: "Nous avons besoin du mot de passe actuel pour le changer",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>
    </div>

  <div class="form-cancel-right">

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn-green" %>
      </div>
    <% end %>

    <div class="cancel-account">

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
